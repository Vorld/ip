<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainWindow"
            minHeight="400.0" minWidth="450.0"
            prefHeight="600.0" prefWidth="450.0"
            stylesheets="@../styles/main.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="chuck.ui.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   promptText="Type your message here..."
                   AnchorPane.bottomAnchor="8.0"
                   AnchorPane.leftAnchor="8.0"
                   AnchorPane.rightAnchor="88.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                text="Send"
                AnchorPane.bottomAnchor="8.0"
                AnchorPane.rightAnchor="8.0" />
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    vvalue="1.0"
                    AnchorPane.topAnchor="8.0"
                    AnchorPane.bottomAnchor="65.0"
                    AnchorPane.leftAnchor="8.0"
                    AnchorPane.rightAnchor="8.0">
            <content>
                <VBox fx:id="dialogContainer"
                      minWidth="300.0" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>

